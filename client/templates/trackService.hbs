<article id="track_service" class="c-flex mt-1 p-8">
    <div class="max-w-sm w-full lg:max-w-full lg:flex">
        <div class=" border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex  justify-between leading-normal">
            <div>
                <div class="mb-8">
                    <div class="text-gray-900 font-bold text-xl mb-2">{{this.item.name}}</div>
                    <p class="text-gray-700 text-base">Booking ID : 123456</p>
                </div>
                <div class="mb-8">
                    <div class="text-gray-900 font-bold text-xl mb-2">Date</div>
                    <p class="text-gray-700 text-base">{{this.item.createdAt}}</p>
                </div>
            </div>
            <div class="flex items-center">
                <img class="w-10 h-10 rounded-full mr-4" src="{{this.item.image}}" alt="{{this.item.name}}">
                <!--                <div class="text-sm">-->
                <!--                    <p class="text-gray-900 leading-none">Jonathan Reinink</p>-->
                <!--                    <p class="text-gray-600">Aug 18</p>-->
                <!--                </div>-->
            </div>
        </div>

        <div class="flex mt-2">
            <div class="flex flex-col  align-center w-25 h-[50vh]">
                <div class="flex items-center gap-4 ">
                    <div id="pending" class="w-16 h-16 bg-gray-600 rounded-full"></div>
                    <p class="mt-1 text-xs">Pending</p>
                </div>

                <div id="fLine" class="w-1 h-20 bg-gray-300 mx-7"></div>
                <div class="flex items-center gap-4">
                    <div id="inProgress" class="w-16 h-16 bg-gray-600 rounded-full"></div>
                    <p class="mt-1 text-xs">Installation</p>
                </div>

                <div id="sLine" class="w-1 h-20 bg-gray-300 mx-7"></div>
                <div class="flex items-center gap-4">
                    <div id="finalIspection" class="w-16 h-16 bg-gray-600 rounded-full "></div>
                    <p class="mt-1 text-xs">Final Inspection</p>
                </div>

                <div id='tLine' class="w-1 h-20 bg-gray-300 mx-7"></div>
                <div class="flex items-center gap-4">
                    <div id="delivered" class="w-16 h-16 bg-gray-600 rounded-full "></div>
                    <p class="mt-1 text-xs">Delivered</p>
                </div>
            </div>
        </div>
    </div>
</article>

